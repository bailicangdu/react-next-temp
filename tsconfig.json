{
  "compileOnSave": true,
  "compilerOptions": {
    "pretty": true,
    "experimentalDecorators": true,
    "target": "esnext",
    "module": "es6",
    "jsx": "preserve",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": [ "dom", "es2015", "es2016", "es2017"]
  },
  "include": ["./pages/**/*", "./components/**/*", "./api/**/*"]
}
